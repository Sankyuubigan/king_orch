@echo off
setlocal

rem ===================================================================================
rem ОБЫЧНЫЙ ЗАПУСК СИСТЕМЫ (С СОХРАНЕНИЕМ ВСЕХ ДАННЫХ)
rem Используйте этот скрипт для повседневного запуска.
rem ===================================================================================

chcp 65001 > nul

set "ProjectDir=%~dp0Orchestrator"

echo.
echo --- Запуск системы без удаления данных... ---

cd /d "%ProjectDir%"

docker compose up -d

if %errorlevel% neq 0 (
    echo.
    echo ERROR: Не удалось запустить контейнеры.
    echo Убедитесь, что Docker Desktop запущен.
    goto :eof
)

echo.
echo --- Система успешно запущена! ---
echo Ваши рабочие пространства, модели и данные сохранены.
echo Откройте браузер: http://localhost:3001
echo.

:eof
endlocal